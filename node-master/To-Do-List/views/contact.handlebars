<body>
  <div class="wrapper">
    <h1 id="demo"></h1>
    <header class="text-center">Todo</header>
    <div class="text-center p-2">
      <button class="btn btn-primary w-25" onclick="addToDo()" ><i class="fas fa-plus"></i></button>
      <button class="btn btn-primary w-25 " onclick="dailyToDo()">Daily</button>
      <button class="btn btn-primary w-25" onclick="monthlyToDo()">Monthly</button>
    </div>
   <form id='addToDoList' onsubmit="addTask(event)">
      <div class="row mb-3 mt-4" >

         <div class="col ">
           <p class="p-0 m-0">Date</p>
          <input type='date' class="form-control w-75" name="date" id="date"  >
         </div>
        <div class="col p-0">
          <p class="p-0 m-0">Time</p>
          <input type='time' class="form-control w-75" name="time" id="time" value="13:30">
          
        </div>
        
      </div>
      <textarea class="form-control" placeholder="Message" name="message" style="height: 100px;" required></textarea>
      <button class="btn btn-primary mt-2" type="submit">Add</button>
      
   </form>
  <div id="dailyToDoList" style="display: none;">
      
  </div>      
  <div id="monthlyToDoList" style="display: none;">
      
  </div>
    </div>
    
  

  </div>
